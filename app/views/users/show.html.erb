<% content_for :title, "Showing user" %>
<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>
  <h1 class="font-bold text-4xl"><%= @user.display_name %>'s Profile</h1>
  <%= render @user %>
  <div>
    <div class="flex justify-between">
      <h1 class="text-2xl">Parties Hosted</h1>
      <%= link_to "New event", new_event_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    </div>
    <div class="flex w-full flex-row flex-wrap justify-evenly items-start">
      <%= render EventsCardComponent.new(events: @events) %>
    </div>
  </div>
  <div class="mt-3">
    <h1 class="text-2xl">Attended Events</h1>
    <div class="flex w-full flex-row flex-wrap justify-evenly items-start">
      <%= render EventsCardComponent.new(events: @attended_events) %>
    </div>
  </div>
</div>
