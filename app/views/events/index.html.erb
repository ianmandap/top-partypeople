<% content_for :title, "Public Events" %>
<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div class="flex justify-between items-center mb-5">
    <h1 class="font-work-sans font-bold text-4xl">Public Events</h1>
    <% if authenticated? %>
      <%= render CreateEventBtnComponent.new %>
      <%#= link_to "New event", new_event_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-brandwhite block font-medium" %>
    <% end %>
  </div>
  <%= render EventsCardComponent.new(events: @events, user: nil) %>
</div>
