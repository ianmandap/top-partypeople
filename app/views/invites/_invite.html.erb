<div id="<%= dom_id invite %>" class="w-full sm:w-auto my-5 space-y-5">
  <li>
    <%= link_to user_path(id: invite.attendee.id), class: "flex items-center p-3 text-base font-bold text-gray-900 rounded-lg bg-gray-50 hover:bg-gray-100 group hover:shadow dark:bg-gray-600 dark:hover:bg-gray-500 dark:text-brandwhite" do %>
      <%= render AvatarPlaceholderComponent.new(placeholder_initial: invite.attendee.placeholder_initial) %>
      <div class="flex-1 ms-3 whitespace-nowrap"><%= invite.attendee.display_name %></div>
      <div class='my-3'><%= invite.status %></div>
    <% end %>
  </li>
</div>
