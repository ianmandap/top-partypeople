<% content_for :title, "Invites" %>
<%= render TurboModalComponent.new(title: "Guest List") do %>
  <div id="invites" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @invites.any? %>
      <% @invites.each do |invite| %>
        <div class="flex flex-col">
          <%= render invite %>
          <%#= link_to "Edit", edit_invite_path(invite), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
          <%#= link_to invite, class: "block w-full", data: { turbo_confirm: "Are you sure you want to delete this invite?", turbo_method: :delete } %>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No invites found.</p>
    <% end %>
  </div>
<% end %>
