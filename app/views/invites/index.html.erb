<% content_for :title, "Invites" %>
<%= render TurboModalComponent.new(title: "Guest List") do %>
  <div id="invites" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @invites.any? %>
      <%= render TabsComponent.new(id: "guest-list") do |component| %>
        <% if @invites.going.any? %>
          <% component.with_header(header_id: "going", header_title: "Going #{@invites.going.size}") %>
          <% component.with_body(header_id: "going") do %>
            <% @invites.going.each do |invite| %>
              <div class="flex flex-col">
                <%= render invite %>
              </div>
            <% end %>
          <% end %>
        <% end %>
        <% if @invites.maybe.any? %>
          <% component.with_header(header_id: "maybe", header_title: "Maybe #{@invites.maybe.size}") %>
          <% component.with_body(header_id: "maybe") do %>
            <% @invites.maybe.each do |invite| %>
              <div class="flex flex-col">
                <%= render invite %>
              </div>
            <% end %>
          <% end %>
        <% end %>
        <% if @invites.declined.any? %>
          <% component.with_header(header_id: "declined", header_title: "Declined #{@invites.declined.size}") %>
          <% component.with_body(header_id: "declined") do %>
            <% @invites.declined.each do |invite| %>
              <div class="flex flex-col">
                <%= render invite %>
              </div>
            <% end %>
          <% end %>
        <% end %>
        <% if @invites.waitlist.any? %>
          <% component.with_header(header_id: "waitlist", header_title: "Waitlist #{@invites.waitlist.size}") %>
          <% component.with_body(header_id: "waitlist") do %>
            <% @invites.waitlist.each do |invite| %>
              <div class="flex flex-col">
                <%= render invite %>
              </div>
            <% end %>
          <% end %>
        <% end %>
        <% if @invites.pending.any? %>
          <% component.with_header(header_id: "pending", header_title: "Pending #{@invites.pending.size}") %>
          <% component.with_body(header_id: "pending") do %>
            <% @invites.pending.each do |invite| %>
              <div class="flex flex-col">
                <%= render invite %>
              </div>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    <% else %>
      <p class="text-center my-10">No invites found.</p>
    <% end %>
  </div>
<% end %>
