<%= form_with(model: [event, invite], class: "contents") do |form| %>
  <% if invite.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(invite.errors.count, "error") %> prohibited this invite from being saved:</h2>
      <ul class="list-disc ml-6">
        <% invite.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="w-full mt-3 text-2xl md:text-sm lg:text-xl xl:text-2xl">
    <ul class="flex flex-row items-center justify-center gap-3">
      <li class="w-full">
        <%= form.radio_button :status, "attending", required: true, class: "hidden peer" %>
        <%= form.label :status_attending, "attending", class: "#{rsvpLabelForm}" do %>
                  <span>👍</span> <span>Going</span>
        <% end %>
      </li>
      <li class="w-full">
        <%= form.radio_button :status, "maybe", required: true, class: "hidden peer" %>
        <%= form.label :status_maybe, "maybe", class: "#{rsvpLabelForm}" do %>
              <span>🤔</span> <span>Maybe</span>
        <% end %>
      </li>
      <li class="w-full">
        <%= form.radio_button :status, "declined", required: true, class: "hidden peer" %>
        <%= form.label :status_declined, "declined", class: "#{rsvpLabelForm}" do %>
              <span>❌</span> <span>Can't Go</span>
        <% end %>
      </li>
    </ul>
    <div class="flex flex-row mt-10 gap-5 w-fit">
    <%= form.submit class: "cursor-pointer py-3 px-5 text-base font-medium text-center text-white rounded-lg hover:brightness-75 bg-brandblack focus:ring-4 focus:ring-blue-300" %>
    <% if params[:id].present? %>
      <%= link_to [@event, @invite], class: "block w-full", data: { turbo_confirm: "Are you sure you want to delete this invite?", turbo_method: :delete } do %>
        <div class="flex items-start cursor-pointer py-3 px-5 text-base font-medium text-center text-white rounded-lg hover:brightness-75 focus:ring-4 bg-red-500">
          <%= icon 'x', library: "boxicons" %>
          <span class="ml-2">Delete Invite</span>
        </div>
      <% end %>
    <% end %>
    </div>
  </div>
<% end %>

