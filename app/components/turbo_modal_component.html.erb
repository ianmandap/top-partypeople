<%= turbo_frame_tag "modal" do %>
  <%= tag.div data: { controller: "turbo-modal",
                      turbo_modal_target: "modal",
                      action: "" },
                      id: "modal-container",
                      class: "absolute h-auto w-auto" do %>
    <div class="overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 
              justify-center items-center w-full md:inset-0 h-full bg-black/25">
      <div class="relative w-full max-w-2xl max-h-full">
        <div class="relative bg-brandlightgray/80 rounded-lg shadow-sm">
          <!-- Modal header -->
          <div class="flex items-center justify-between p-3 md:px-5 bg-inherit">
            <h3 class="text-lg font-semibold text-gray-900">
              <%= @title %>
            </h3>
            <%= button_tag "Close", type: "button", class: "text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm h-8 w-8 ms-auto inline-flex justify-center items-center",
                      data: { action: "turbo-modal#hideModal" }  do %>
              <svg class="w-3 h-3" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
              </svg>
              <span class="sr-only">Close modal</span>
            <% end %>
          </div>
          <!-- Modal body -->
          <div class="p-4 md:p-5 bg-inherit">
            <%= content %>
            <!--        <button class="text-white inline-flex w-full justify-center bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">
          Continue
        </button>-->
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>