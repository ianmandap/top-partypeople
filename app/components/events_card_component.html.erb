<% if @events.any? %>
  <% @events.each do |event| %>
    <div class="mt-2 mb-2 w-full max-w-sm bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700">
      <%= image_tag 'kelsey-chance-tAH2cA_BL5g-unsplash.jpg', class: "p-8 rounded-t-lg", alt: "party image" %>
      <div class="px-5 pb-5">
        <a href="#">
          <h5 class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white"><%= event.title %></h5>
        </a>
        <div class="flex items-start mt-1 mb-2.5 flex-col">
          <span class="text-white mr-2 text-xs"><%= event.formatted_date %></span>
          <span class="flex flex-start justify-center items-center gap-1 bg-blue-100 text-blue-800 text-xs font-semibold px-2.5 py-0.5 rounded-sm dark:bg-blue-200 dark:text-blue-800">
            <span>
              <svg id="pin-icon" class="w-5 h-5 text-gray-400 me-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M11.906 1.994a8.002 8.002 0 0 1 8.09 8.421 7.996 7.996 0 0 1-1.297 3.957.996.996 0 0 1-.133.204l-.108.129c-.178.243-.37.477-.573.699l-5.112 6.224a1 1 0 0 1-1.545 0L5.982 15.26l-.002-.002a18.146 18.146 0 0 1-.309-.38l-.133-.163a.999.999 0 0 1-.13-.202 7.995 7.995 0 0 1 6.498-12.518ZM15 9.997a3 3 0 1 1-5.999 0 3 3 0 0 1 5.999 0Z" clip-rule="evenodd"/>
              </svg>
            </span>
            <span>
              <%= event.location %></span>
          </span>
        </div>
        <div class=text-white>
          <div class="flex items-center justify-start">
            <%= render AvatarPlaceholderComponent.new(placeholder_initial: event.creator.placeholder_initial) %>
            <span class="ml-2">Hosted by <%= event.creator.display_name %></span>
          </div>
        </div>
        <div>
          <div class="text-white my-3 line-clamp-5">
            <%= event.description %>
          </div>
        </div>
        <div class="flex items-center justify-between">
          <div class="flex -space-x-4 rtl:space-x-reverse">
            <%= render AvatarPlaceholderComponent.new(placeholder_initial: "A") %>
            <%= render AvatarPlaceholderComponent.new(placeholder_initial: "B") %>
            <%= render AvatarPlaceholderComponent.new(placeholder_initial: "2+") %>
            <!--<a class="flex items-center justify-center w-8 h-8 text-xs font-medium text-white bg-gray-700 border border-white rounded-full hover:bg-gray-600 dark:border-gray-800" href="#">+99</a>-->
          </div>
          <span class="ml-2 text-sm font-bold text-gray-900 dark:text-white">Mary and 2 others are attending</span>
          <%= link_to 'See More', event_path(id: event.id), class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm p-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
        </div>
      </div>
    </div>
  <% end %>
<% else %>
  <p class="text-center my-10">No events found.</p>
<% end %>